<!-- filter_menu_layout.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/area_filter"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/area_filter_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_alignParentEnd="true"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/filter_a"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Area 1"
                android:padding="5dp"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/Gold"
                android:clickable="true"/>

            <TextView
                android:id="@+id/filter_b"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:padding="5dp"
                android:layout_below="@id/filter_a"
                android:textStyle="bold"
                android:textColor="@color/Gold"
                android:text="Area 2"
                android:textSize="12sp"
                android:clickable="true" />

            <TextView
                android:id="@+id/filter_c"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/Gold"
                android:textStyle="bold"
                android:padding="5dp"
                android:layout_below="@id/filter_b"
                android:text="Area 3"
                android:textSize="12sp"
                android:clickable="true"/>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/blankCard"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@id/graph_card"
        app:cardElevation="0dp"
        android:backgroundTint="@android:color/transparent"/>
    <!-- Add more filter options if needed -->

</RelativeLayout>